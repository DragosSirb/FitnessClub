@page
@model FitnessClub.Pages.Session.CreateModel

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/crud.css" rel="stylesheet" />

<div class="card">
    <h1>Create Session</h1>
    <h4>Session Details</h4>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Sessions.Date" class="control-label"></label>
            <input asp-for="Sessions.Date" class="form-control" />
            <span asp-validation-for="Sessions.Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sessions.TrainerId" class="control-label"></label>
            <select asp-for="Sessions.TrainerId" class="form-control" asp-items=ViewBag.TrainerId>
                <option value="">Select Trainer</option>
            </select>
            <span asp-validation-for="Sessions.TrainerId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sessions.Location" class="control-label"></label>
            <input asp-for="Sessions.Location" class="form-control" />
            <span asp-validation-for="Sessions.Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sessions.Description" class="control-label"></label>
            <input asp-for="Sessions.Description" class="form-control" />
            <span asp-validation-for="Sessions.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
