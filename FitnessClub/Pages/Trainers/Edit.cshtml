@page
@model FitnessClub.Pages.Trainers.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <link rel="stylesheet" href="~/css/crud.css" />


<div class="container mt-5">
    <div class="card p-4">
        <h1>Edit Trainer</h1>
        <h4>Update the trainer's details</h4>
        <hr />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Trainers.Id" />

            <div class="form-group">
                <label asp-for="Trainers.Name" class="control-label"></label>
                <input asp-for="Trainers.Name" class="form-control" />
                <span asp-validation-for="Trainers.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Trainers.Expertise" class="control-label"></label>
                <input asp-for="Trainers.Expertise" class="form-control" />
                <span asp-validation-for="Trainers.Expertise" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Trainers.Description" class="control-label"></label>
                <input asp-for="Trainers.Description" class="form-control"/>
                <span asp-validation-for="Trainers.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}