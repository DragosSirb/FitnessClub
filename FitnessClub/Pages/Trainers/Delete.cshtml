@page
@model FitnessClub.Pages.Trainers.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/crud.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center">Delete Trainer</h1>
    <h3 class="text-center">Are you sure you want to delete this trainer?</h3>

    <div class="card">
        <h4 class="card-title text-center">Trainer Details</h4>
        <hr />
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Trainers.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Trainers.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Trainers.Expertise)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Trainers.Expertise)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Trainers.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Trainers.Description)
                </dd>
            </dl>
        </div>
    </div>

    <form method="post" class="text-center mt-4">
        <input type="hidden" asp-for="Trainers.Id" />
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <br />
        <a class="btn btn-link mt-3" asp-page="./Index">Back to List</a>
    </form>
</div>
