@page
@model FitnessClub.Pages.Recommandation.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<link href="~/css/crud.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="text-center">Delete Recommendation</h1>
    <h3 class="text-center text-danger">Are you sure you want to delete this recommendation?</h3>

    <div class="card">
        <h4 class="card-title text-center">Recommendation Details</h4>
        <hr />
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Recommendations.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Recommendations.Description)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Recommendations.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Recommendations.Category)
                </dd>
            </dl>
        </div>
    </div>

    <form method="post" class="text-center mt-4">
        <input type="hidden" asp-for="Recommendations.Id" />
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <br />
        <a class="btn btn-link mt-3" asp-page="./Index">Back to List</a>
    </form>
</div>
