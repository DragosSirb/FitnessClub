@page
@model FitnessClub.Pages.MotivationalQote.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/crud.css" />

<div class="container mt-5">
    <div class="card p-4">
        <h1>Edit Motivational Quote</h1>
        <h4>Update the motivational quote details</h4>
        <hr />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MotivationalQotes.Id" />

            <div class="form-group">
                <label asp-for="MotivationalQotes.Text" class="control-label">Quote Text</label>
                <input asp-for="MotivationalQotes.Text" class="form-control" />
                <span asp-validation-for="MotivationalQotes.Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MotivationalQotes.Author" class="control-label">Author</label>
                <input asp-for="MotivationalQotes.Author" class="form-control" />
                <span asp-validation-for="MotivationalQotes.Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
